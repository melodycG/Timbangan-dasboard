</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">

                <!-- Reports -->
                <div class="col-12">
                    <div class="card">
                        <!-- Truk Card -->
                        <!-- <div class="col-xxl-4 col-md-6">
                            <div class="card info-card sales-card">

                                <div class="card-body">
                                    <div class="d-flex align-items-center mt-3">
                                        <div
                                            class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="fas fa-car"></i>
                                        </div>
                                        <div class="ps-3">
                                            <span>Jumlah Truk</span>
                                            <h6>
                                                <span class="text-success small pt-1 fw-bold">200</span> <span
                                                    class="text-muted small pt-2 ps-1">Truk</span>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> -->
                        <!-- End Truk Card -->
                        <div class="hstack gap-3 justify-content-center">
                            <div class="card-body">
                                <div class="d-flex align-items-center mt-3">
                                    <div
                                        class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-car"></i>
                                    </div>
                                    <div class="ps-2">
                                        <span>Jumlah Truk</span>
                                        <h6>
                                            <span class="text-success small pt-1 fw-bold">
                                                <%= truk %>
                                            </span> <span class="text-muted small pt-2 ps-1">Truk</span>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mt-3">
                                    <div
                                        class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fa-solid fa-weight-hanging"></i>
                                    </div>
                                    <div class="ps-2">
                                        <span>Total Berat</span>
                                        <h6>
                                            <span class="text-success small pt-1 fw-bold">
                                                <%= total %>
                                            </span> <span class="text-muted small pt-2 ps-1">Ton</span>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mt-3">
                                    <div
                                        class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-weight"></i>
                                    </div>
                                    <div class="ps-2">
                                        <span>Rata-rata Berat</span>
                                        <h6>
                                            <span class="text-success pt-1 fw-boldx">
                                                <%= avg %>
                                            </span>
                                            <span class="text-muted pt-2 ps-1">Ton</span>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Reports <span>/Today</span></h5>
                            <!-- Line Chart -->
                            <canvas id="lineChart" style="max-height: 100%;"></canvas>
                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                    var dataChart = []
                                    var label = []

                                    $.get("/home/last-seven-days", function (data, status) {
                                        // alert("Data: " + data + "\nStatus: " + status);
                                        // console.log(data.data)
                                        var berat_aktual = data.data
                                        for (let index = 0; index < berat_aktual.length; index++) {
                                            dataChart.push(berat_aktual[index].berat_aktual)
                                            if(berat_aktual[index].days == 0) {
                                                label.push('Senin')
                                            } else if(berat_aktual[index].days == 1) {
                                                label.push("Selasa")
                                            } else if(berat_aktual[index].days == 2) {
                                                label.push("Rabu")
                                            } else if(berat_aktual[index].days == 3) {
                                                label.push("Kamis")
                                            } else if(berat_aktual[index].days == 4) {
                                                label.push("Jum'at")
                                            } else if(berat_aktual[index].days == 5) {
                                                label.push("Sabtu")
                                            } else if(berat_aktual[index].days == 6) {
                                                label.push("Minggu")
                                            }
                                        }
                                    });
                                    console.log(label)
                                    new Chart(document.querySelector('#lineChart'), {
                                        type: 'line',
                                        data: {
                                            labels: label,
                                            datasets: [{
                                                label: 'Line Chart',
                                                data: dataChart,
                                                fill: false,
                                                borderColor: 'rgb(75, 192, 192)',
                                                tension: 0.1
                                            }]
                                        },
                                        options: {
                                            scales: {
                                                y: {
                                                    beginAtZero: true
                                                }
                                            }
                                        }
                                    });
                                });
                            </script>
                            <!-- End Line CHart -->

                        </div>
                    </div>
                </div><!-- End Reports -->

            </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

            <!-- Recent Activity -->
            <div class="card">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Filter</h6>
                        </li>

                        <li><a class="dropdown-item" href="#">Today</a></li>
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                        <li><a class="dropdown-item" href="#">This Year</a></li>
                    </ul>
                </div>

                <div class="card-body">
                    <h5 class="card-title">List Timbangan <span>| Today</span></h5>

                    <% if(dataToday.length <=10) { dataToday.forEach(function(data){ %>
                        <h6>
                            <%= parseFloat(data.berat_aktual / 1000).toFixed(1) %> TON
                        </h6>
                        <% }) } else { for (let index=0; index < 10; index++) {%>
                            <h6>
                                <%= parseFloat(dataToday[index].berat_aktual / 1000).toFixed(1) %> TON
                            </h6>
                            <% } } %>
                                <!-- <button>View All</button> -->
                </div>
            </div><!-- End Recent Activity -->
        </div><!-- End Right side columns -->

    </div>
